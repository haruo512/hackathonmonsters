<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape
            android:shape="oval">
            <solid android:color="#aaa"/>
            <stroke android:color="@android:color/white" android:width="@dimen/play_drawing_color_stroke_width"/>
            <padding android:bottom="@dimen/play_drawing_color_select_padding"
                android:left="@dimen/play_drawing_color_select_padding"
                android:right="@dimen/play_drawing_color_select_padding"
                android:top="@dimen/play_drawing_color_select_padding"/>
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape
            android:shape="oval">
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
</selector>

