<resources>
    <!-- Text styles -->
    <style name="TextAppearance.Custom" parent="@style/TextAppearance.AppCompat">
        <item name="@android:textColor">?attr/android:textColorPrimary</item>
        <item name="@android:textColorHint">?attr/android:textColorHint</item>
        <item name="@android:textColorHighlight">?attr/android:textColorHighlight</item>
        <item name="@android:textColorLink">?attr/android:textColorLink</item>
        <item name="@android:textSize">@dimen/text_size_body_1</item>
    </style>

    <!-- Deprecated text styles -->
    <style name="TextAppearance.Custom.Inverse">
        <item name="@android:textColor">?attr/android:textColorPrimaryInverse</item>
        <item name="@android:textColorHint">?attr/android:textColorHintInverse</item>
        <item name="@android:textColorHighlight">?attr/android:textColorHighlightInverse</item>
        <item name="@android:textColorLink">?attr/android:textColorLinkInverse</item>
    </style>

    <style name="TextAppearance.Custom.XLarge">
        <item name="@android:textSize">@dimen/text_size_xlarge</item>
        <item name="@android:textColor">?attr/android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.Custom.Large">
        <item name="@android:textSize">@dimen/text_size_large</item>
        <item name="@android:textColor">?attr/android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.Custom.Large.Inverse">
        <item name="@android:textColor">?attr/android:textColorPrimaryInverse</item>
        <item name="@android:textColorHint">?attr/android:textColorHintInverse</item>
        <item name="@android:textColorHighlight">?attr/android:textColorHighlightInverse</item>
        <item name="@android:textColorLink">?attr/android:textColorLinkInverse</item>
    </style>

    <!-- リストアイテムなどのタイトル用文字スタイル -->
    <style name="TextAppearance.Custom.Title">
        <item name="@android:textSize">@dimen/text_size_large</item>
        <item name="@android:textColor">?attr/android:textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Custom.Medium">
        <item name="@android:textSize">@dimen/text_size_medium</item>
        <item name="@android:textColor">?attr/android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.Custom.Medium.Inverse">
        <item name="@android:textColor">?attr/android:textColorPrimaryInverse</item>
        <item name="@android:textColorHint">?attr/android:textColorHintInverse</item>
        <item name="@android:textColorHighlight">?attr/android:textColorHighlightInverse
        </item>
        <item name="@android:textColorLink">?attr/android:textColorLinkInverse</item>
    </style>

    <!-- 日付表示やサブタイトル用のStyle -->
    <style name="TextAppearance.Custom.Small">
        <item name="@android:textSize">@dimen/text_size_small</item>
        <item name="@android:textColor">?attr/android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.Custom.Small.Inverse">
        <item name="@android:textColor">?attr/android:textColorTertiaryInverse</item>
        <item name="@android:textColorHint">?attr/android:textColorHintInverse</item>
        <item name="@android:textColorHighlight">?attr/android:textColorHighlightInverse
        </item>
        <item name="@android:textColorLink">?attr/android:textColorLinkInverse</item>
    </style>

    <style name="TextAppearance.Custom.Button">
        <item name="@android:textSize">@dimen/text_size_button</item>
        <item name="@android:textAllCaps">false</item>
        <item name="@android:textColor">?attr/android:textColorPrimaryInverse</item>
        <item name="@android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Custom.Widget" />

    <style name="TextAppearance.Custom.Widget.Button" parent="@style/TextAppearance.Custom.Button" />

    <style name="TextAppearance.Custom.Widget.EditText">
        <item name="@android:textColor">?attr/android:textColorPrimary</item>
        <item name="@android:textColorHint">?attr/android:textColorHint</item>
    </style>

    <style name="TextAppearance.Custom.Widget.TextView">
        <item name="@android:textColor">?attr/android:textColorPrimary</item>
        <item name="@android:textColorHint">?attr/android:textColorHint</item>
    </style>

    <!-- Widget -->
    <style name="Widget.Custom.Button.Primary" parent="@style/Widget.AppCompat.Light.ActionButton">
        <item name="@android:background">@drawable/bg_button_primary</item>
        <item name="@android:textAppearance">?attr/android:textAppearanceButton</item>
    </style>

    <!-- Widget -->
    <style name="Widget.Custom.Button.Round" parent="@style/Widget.AppCompat.Light.ActionButton">
        <item name="@android:background">@drawable/bg_ghost_round_button</item>
        <item name="@android:textAppearance">?attr/android:textAppearanceButton</item>
        <item name="android:minWidth">@dimen/button_round_minsize</item>
        <item name="android:minHeight">@dimen/button_round_minsize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_text_inverse</item>
    </style>

    <!-- Widget -->
    <style name="Widget.Custom.Button.Large" parent="@style/Widget.AppCompat.Light.ActionButton">
        <item name="@android:background">@drawable/bg_button_large</item>
        <item name="@android:textAppearance">?attr/android:textAppearanceButton</item>
        <item name="android:textSize">@dimen/button_large_text_size</item>
        <item name="android:padding">@dimen/button_large_vertical_padding</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">@dimen/button_large_height</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/primary_text_inverse</item>
    </style>

    <!-- Widget -->
    <style name="Widget.Custom.Button.Small" parent="@style/Widget.AppCompat.Light.ActionButton">
        <item name="@android:background">@drawable/bg_button_small</item>
        <item name="@android:textAppearance">?attr/android:textAppearanceButton</item>
        <item name="android:minHeight">@dimen/button_small_height</item>
        <item name="android:textSize">@dimen/button_small_text_size</item>
        <item name="android:textColor">@color/primary_text_inverse</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Custom.Button.Square" parent="@style/Widget.AppCompat.Light.ActionButton">
        <item name="@android:background">@drawable/bg_button_large</item>
        <item name="@android:textAppearance">?attr/android:textAppearanceButton</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/button_squeare_text_size</item>
        <item name="android:minHeight">@dimen/button_squeare_height</item>
        <item name="android:textColor">@color/primary_text_inverse</item>
    </style>


</resources>